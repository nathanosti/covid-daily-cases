{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["ES6"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["/src/controllers/*"],
      "@models/*": ["/src/models/*"],
      "@types/*": ["/src/@types/*"]
    }
  },
  "include": ["src/**/*"]
}
